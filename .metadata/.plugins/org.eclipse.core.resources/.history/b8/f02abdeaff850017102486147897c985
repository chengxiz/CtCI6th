package cracking.ch4;
import cracking.Library.*;
import cracking.Library.Vertex.State;

public class Route2 {
	public static boolean search_BFS(Graph g, Vertex start, Vertex end) {
		if (start == end) return true;

		SinglyLinkedList<Vertex> queue = new SinglyLinkedList<Vertex>();

		for (Vertex u: g.getVertices()) {
			u.state = State.Unvisited;
		}
		start.state = State.Visiting;
		queue.addLast(start);
		Vertex u;
		while (!queue.isEmpty()) {
			u = queue.removeFirst();
			if ( u != null) {
				for (Vertex v: u.getAdjacent()) {
					if (v.state == State.Unvisited) {
						if (v == end) {
							return true;
						} else {
							v.state = State.Visiting;
							queue.addLast(v);
						}
					}
				}
				u.state = State.Visited;
			}
		}
		return false;
	}
	public static boolean search_DFS(Graph g, Vertex start, Vertex end) {
		if (start == end) return true;

		for (Vertex u: g.getVertices()) {
			u.state = State.Unvisited;
		}
		return search_DFS_Recursion(start,end);
	}
	public static boolean search_DFS_Recursion(Vertex start, Vertex end) {
		boolean found = false;
		start.state =State.Visiting;
		//queue.add(start);
		for (Vertex v : start.getAdjacent()) {
			if (v.state == State.Unvisited)					
				found = (found || search_DFS_Recursion(v,end));
		}
		start.state = State.Visited;
		if (start == end) return true;
		return found;
	}

	public static Graph createNewGraph() {
		Graph g = new Graph(9);        
		Vertex[] temp = new Vertex[9];

		temp[0] = new Vertex("a", 3);
		temp[1] = new Vertex("b", 1);
		temp[2] = new Vertex("c", 0);
		temp[3] = new Vertex("d", 1);
		temp[4] = new Vertex("e", 3);
		temp[5] = new Vertex("f", 0);
		temp[6] = new Vertex("g", 0);
		temp[7] = new Vertex("h", 0);
		temp[8] = new Vertex("i", 0);

		temp[0].addAdjacent(temp[1]);
		temp[0].addAdjacent(temp[2]);
		temp[0].addAdjacent(temp[3]);
		temp[3].addAdjacent(temp[4]);
		temp[4].addAdjacent(temp[5]);
		temp[4].addAdjacent(temp[6]);
		temp[4].addAdjacent(temp[7]);
		temp[1].addAdjacent(temp[8]);
		for (int i = 0; i < 9; i++) {
			g.addVertices((temp[i]));
		}
		return g;
	}
	public static void main(String[] args) {
		Graph g = createNewGraph();
		Vertex[] n = g.getVertices();
		Vertex start1 = n[1];
		Vertex end1 = n[5];
		System.out.println(search_BFS(g, start1, end1));
		System.out.println(search_DFS(g, start1, end1));
		Vertex start2 = n[3];
		Vertex end2 = n[5];
		System.out.println(search_BFS(g, start2, end2));
		System.out.println(search_DFS(g, start2, end2));
		Vertex start3 = n[8];
		Vertex end3 = n[6];
		System.out.println(search_BFS(g, start3, end3));
		System.out.println(search_DFS(g, start3, end3));
	}
	
}
